        <!-- About Section -->
    <section id="about" class="section about">
      <div class="container">
        <h2 class="section-title">About</h2>
        <p class="about-text">{profile.about}</p>
      </div>
    </section>

    <!-- Skills Section -->
    <section id="skills" class="section skills">
      <div class="container">
        <h2 class="section-title">Skills</h2>
        <div class="skills-grid">
          {skills.map((group) => (
            <div class="skill-group card">
              <h3 class="skill-category">{group.category}</h3>
              <div class="skill-tags">
                {group.items.map((skill) => (
                  <span class="tag">{skill}</span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Experience Section -->
    <section id="experience" class="section experience">
      <div class="container">
        <h2 class="section-title">Experience</h2>
        <div class="timeline">
          {experience.map((job, index) => (
            <div class="timeline-item card">
              <div class="timeline-header">
                <div>
                  <h3 class="timeline-position">{job.position}</h3>
                  <p class="timeline-company">{job.company}</p>
                </div>
                <span class="timeline-period">{job.period}</span>
              </div>
              <p class="timeline-description">{job.description}</p>
              <ul class="timeline-achievements">
                {job.achievements.map((achievement) => (
                  <li>{achievement}</li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="section projects">
      <div class="container">
        <h2 class="section-title">Projects</h2>
        <div class="projects-grid">
          {projects.map((project) => (
            <a href={project.url} class="project-card card">
              <h3 class="project-name">{project.name}</h3>
              <p class="project-description">{project.description}</p>
              <div class="project-tags">
                {project.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Education Section -->
    <section id="education" class="section education">
      <div class="container">
        <h2 class="section-title">Education</h2>
        <div class="education-list">
          {education.map((edu) => (
            <div class="education-item card">
              <div class="education-header">
                <div>
                  <h3 class="education-degree">{edu.degree}</h3>
                  <p class="education-institution">{edu.institution}</p>
                </div>
                <span class="education-period">{edu.period}</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

      <!-- Footer -->
      <footer class="footer">
        <div class="container">
          <p>¬© {new Date().getFullYear()} {profile.name}. All rights reserved.</p>
        </div>
      </footer>
    </main>
  </div>
</Layout>

<style>
  /* Page Layout */
  .page-wrapper {
    display: flex;
    min-height: 100vh;
  }

  /* Sidebar - Fixed Left */
  .sidebar {
    position: sticky;
    top: 0;
    width: 400px;
    min-width: 400px;
    height: 100vh;
    overflow-y: auto;
    padding: var(--space-3xl) var(--space-2xl);
    border-right: 1px solid var(--color-border);
    background: var(--color-bg-primary);
  }

  /* Main Content - Scrollable Right */
  .main-content {
    flex: 1;
    overflow-y: auto;
    height: 100vh;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-lg);
  }

  .hero-avatar {
    width: 120px;
    height: 120px;
    border: 2px solid var(--color-border);
    border-radius: 50%;
    overflow: hidden;
    box-shadow: var(--shadow-glow);
    background: var(--color-bg-card);
  }

  .avatar-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .hero-name {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0;
  }

  .hero-title {
    font-size: 1.1rem;
    color: var(--color-text-secondary);
    font-weight: 400;
    margin: 0;
  }

  .hero-location {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--color-text-secondary);
    font-size: 0.9rem;
  }

  .icon {
    width: 18px;
    height: 18px;
  }

  .hero-socials {
    display: flex;
    gap: var(--space-md);
  }

  .social-link {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
  }

  .social-link:hover {
    color: var(--color-accent-light);
    transform: translateY(-2px);
  }

  .social-link svg {
    width: 20px;
    height: 20px;
  }

  .hero-actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    width: 100%;
  }

  .hero-actions .btn {
    width: 100%;
    justify-content: center;
  }

  /* Navigation in Sidebar */
  .sidebar-nav {
    margin-top: var(--space-xl);
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-border);
  }

  .sidebar-nav .nav-title {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-md);
    font-weight: 500;
  }

  .sidebar-nav-links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .sidebar-nav-link {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: color var(--transition-fast);
    padding: var(--space-xs) 0;
  }

  .sidebar-nav-link .nav-line {
    width: 2px;
    height: 1em;
    background: var(--color-text-muted);
    transition: width var(--transition-base), background var(--transition-fast);
    flex-shrink: 0;
  }

  .sidebar-nav-link .nav-text {
    transition: color var(--transition-fast);
  }

  .sidebar-nav-link:hover .nav-text,
  .sidebar-nav-link.active .nav-text {
    color: var(--color-text-primary);
  }

  .sidebar-nav-link:hover .nav-line,
  .sidebar-nav-link.active .nav-line {
    width: 20px;
    background: var(--color-accent-light);
  }

  .sidebar-nav-link.active .nav-text {
    color: var(--color-text-primary);
    font-weight: 600;
  }

  /* Contact in Sidebar */
  .hero-contact {
    margin-top: var(--space-xl);
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-border);
  }

  .contact-title {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-md);
    font-weight: 500;
  }

  .contact-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .contact-link {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color var(--transition-fast);
  }

  .contact-link:hover {
    color: var(--color-accent-light);
  }

  .contact-link .contact-icon {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
  }

  /* About */
  .about-text {
    font-size: 1.1rem;
    line-height: 1.8;
    max-width: 800px;
  }

  /* Skills */
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: var(--space-lg);
  }

  .skill-category {
    font-size: 1rem;
    color: var(--color-text-muted);
    margin-bottom: var(--space-md);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 500;
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  /* Timeline */
  .timeline {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
  }

  .timeline-position {
    font-size: 1.2rem;
    margin-bottom: var(--space-xs);
  }

  .timeline-company {
    color: var(--color-accent-light);
    font-weight: 500;
  }

  .timeline-period {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    font-family: var(--font-mono);
  }

  .timeline-description {
    margin-bottom: var(--space-md);
  }

  .timeline-achievements {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .timeline-achievements li {
    position: relative;
    padding-left: var(--space-lg);
    color: var(--color-text-secondary);
  }

  .timeline-achievements li::before {
    content: '‚Üí';
    position: absolute;
    left: 0;
    color: var(--color-accent);
  }

  /* Projects */
