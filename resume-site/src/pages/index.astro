<script is:inline>
  // Smooth scroll and active navigation
  (function() {
    function initNavigation() {
      const navLinks = document.querySelectorAll('.sidebar-nav-link');
      const sections = document.querySelectorAll('section[id]');
      const mainContent = document.querySelector('.main-content');

      if (!mainContent || navLinks.length === 0 || sections.length === 0) {
        return;
      }

    // Smooth scroll on click
      navLinks.forEach(link => {
        link.addEventListener('click', (e) => {
          e.preventDefault();
          const targetId = link.getAttribute('href');
          const targetElement = document.querySelector(targetId);
          
          if (targetElement && mainContent) {
            // Set active state immediately
            navLinks.forEach(l => l.classList.remove('active'));
            link.classList.add('active');
            
            // Calculate position relative to main-content
            const mainContentRect = mainContent.getBoundingClientRect();
            const targetRect = targetElement.getBoundingClientRect();
            const currentScroll = mainContent.scrollTop;
            const relativeTop = targetRect.top - mainContentRect.top;
            const targetPosition = currentScroll + relativeTop - 20;
            
            mainContent.scrollTo({
              top: Math.max(0, targetPosition),
              behavior: 'smooth'
            });
            
            // Update active state after scroll completes
            // Use scrollend event if available, otherwise use timeout
            let scrollEndTimer;
            const handleScroll = () => {
              clearTimeout(scrollEndTimer);
              scrollEndTimer = setTimeout(() => {
                updateActiveNav();
                mainContent.removeEventListener('scroll', handleScroll);
              }, 100);
            };
            
            mainContent.addEventListener('scroll', handleScroll);
            
            // Fallback timeout
            setTimeout(() => {
              updateActiveNav();
            }, 600);
          }
        });
      });

    // Update active nav link on scroll
    function updateActiveNav() {
      if (!mainContent) return;
      
      const scrollTop = mainContent.scrollTop;
      const viewportTop = scrollTop + 150; // Offset from top of viewport
      let activeSection = null;
      let closestSection = null;
      let closestDistance = Infinity;

      sections.forEach(section => {
        const sectionId = section.getAttribute('id');
        if (!sectionId) return;
        
        // Get position relative to main-content
        const mainContentRect = mainContent.getBoundingClientRect();
        const sectionRect = section.getBoundingClientRect();
        const sectionTop = scrollTop + (sectionRect.top - mainContentRect.top);
        const sectionBottom = sectionTop + section.offsetHeight;
        
        // Check if section is currently in viewport (with some margin)
        if (viewportTop >= sectionTop && viewportTop < sectionBottom) {
          activeSection = sectionId;
        }
        
        // Track closest section above viewport (for sections we've scrolled past)
        if (sectionTop <= viewportTop) {
          const distance = viewportTop - sectionTop;
          if (distance < closestDistance) {
            closestDistance = distance;
            closestSection = sectionId;
          }
        }
      });

      // Use active section if found, otherwise use closest section above viewport
      const finalSection = activeSection || closestSection;

      // Update active state
      if (finalSection) {
        navLinks.forEach(link => {
          link.classList.remove('active');
          const linkId = link.getAttribute('href').substring(1);
          if (linkId === finalSection) {
            link.classList.add('active');
          }
        });
      }
    }

      // Listen to scroll on main-content
      mainContent.addEventListener('scroll', updateActiveNav);
      
      // Initial check - set About as active if at top
      setTimeout(() => {
        if (mainContent.scrollTop < 50) {
          navLinks.forEach(link => {
            link.classList.remove('active');
            if (link.getAttribute('href') === '#about') {
              link.classList.add('active');
            }
          });
        } else {
          updateActiveNav();
        }
      }, 200);
      
      // Also check on window resize
      window.addEventListener('resize', updateActiveNav);
    }

    // Wait for DOM to be ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initNavigation);
    } else {
      setTimeout(initNavigation, 100);
    }
  })();
</script>




